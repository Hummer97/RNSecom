<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RnsEcomApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_500</item>
    </style>
    <style name="cardStyle">
        <item name="android:background">#2196F3</item>
        <item name="cornerSize">30%</item>
        <item name="android:shape">oval</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        <item name="android:color">@color/black</item>
    </style>
    <style name="TextAppearance.Shrine.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="button_bordered" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="Widget.Rns.bordered.button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/button_border</item>

    </style>
    <style name="TextAppearance.Rns.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>