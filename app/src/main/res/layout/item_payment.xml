<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="430dp"
    android:layout_marginHorizontal="20dp"
    android:background="@drawable/atm_card_bg"
    android:backgroundTint="#535252">
        >


    <ImageView
        android:id="@+id/item_payment_card_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/master_card_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_payment_accountNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="**** **** **** 1183"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_payment_holderName"
        app:layout_constraintStart_toStartOf="@+id/item_payment_holderName" />

    <TextView
        android:id="@+id/item_payment_holderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:text="Earic Wizard"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_payment_cvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/26"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_payment_holderName"
        app:layout_constraintEnd_toEndOf="@+id/item_payment_accountNo" />" />
    </androidx.constraintlayout.widget.ConstraintLayout>